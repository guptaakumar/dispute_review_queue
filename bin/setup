#!/bin/bash
# bin/setup

echo "--- Setting up PostgreSQL Database ---"
bin/rails db:setup  # Creates DB and runs migrations

echo "--- Preparing Redis (Optional: if Redis keys need clearing) ---"
# Placeholder for any required Redis key setup, e.g., clearing Sidekiq queues if necessary

echo "--- Creating Default Users (via Rake Task) ---"
bin/rails users:create_defaults # Calls the rake task defined below 

echo "--- Setup complete! ---"
echo "To start the application:"
echo "1. Server: bin/rails s"
echo "2. Worker: bundle exec sidekiq -r ./config/environment.rb"