<h2>Dispute Review Queue</h2>

<nav>
  <%= link_to 'Daily Volume Report', reports_daily_volume_path %> [cite: 56] |
  <%= link_to 'Time-To-Decision Report', reports_time_to_decision_path %> [cite: 58]
</nav>

<table>
  <thead>
    <tr>
      <th>Dispute ID</th>
      <th>Status</th>
      <th>Charge ID</th>
      <th>Amount</th>
      <th>Opened At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @disputes.each do |dispute| %>
      <tr>
        <td><%= dispute.external_id %></td>
        <td><strong><%= dispute.status.titleize %></strong></td>
        <td><%= dispute.charge.external_id %></td>
        <td><%= number_to_currency(dispute.amount_dollars) %></td>
        <td><%= dispute.opened_at.in_time_zone(Time.zone).to_formatted_s(:short) %></td> 
        <td><%= link_to 'View Case', dispute_path(dispute) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
