<h2>Sign In</h2>

<%= form_with(url: sessions_path, local: true) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>
  
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>
  
  <div>
    <%= form.submit "Log In" %>
  </div>
<% end %>

<% admin_password    = User.default_password_for(:admin) %>
<% reviewer_password = User.default_password_for(:reviewer) %>
<% reader_password   = User.default_password_for(:read_only) %>

<p>
  Available users (passwords from Rails credentials):
  <ul>
    <li>admin@example.com (Admin) — Password: <code><%= admin_password %></code></li>
    <li>review@example.com (Reviewer) — Password: <code><%= reviewer_password %></code></li>
    <li>reader@example.com (Read Only) — Password: <code><%= reader_password %></code></li>
  </ul>
</p>
